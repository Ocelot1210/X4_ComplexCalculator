<UserControl
    x:Class="X4_ComplexCalculator.Main.WorkArea.ModulesGrid.EditEquipment.EquipmentList.EquipmentList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:X4_ComplexCalculator.Main.WorkArea.ModulesGrid.EditEquipment.EquipmentList"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">


    <Grid Background="LightGray">
        <!--  行列定義  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Grid.Column="0">
            <Label Content="一覧：" />
            <xctk:WatermarkTextBox Text="{Binding SearchEquipmentName, UpdateSourceTrigger=PropertyChanged}" Watermark="名称を入力して検索" />
        </DockPanel>

        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            VerticalAlignment="Center">
            <Run Text="装備中：[" />
            <Run Text="{Binding EquippedCount, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
            <Run Text="/" />
            <Run Text="{Binding MaxAmount, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
            <Run Text="]" />
        </TextBlock>

        <Grid Grid.Row="1" Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <!--  追加ボタン  -->
            <Button
                Grid.Row="0"
                Height="30"
                VerticalContentAlignment="Center"
                Command="{Binding AddButtonClickedCommand}"
                CommandParameter="{Binding ElementName=EquipmentsListBox, Path=SelectedItems}"
                Content="➡"
                FontSize="18"
                IsEnabled="{Binding CanAddEquipment, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                ToolTip="左Shiftキーを押しながらクリックで選択項目を一気に追加できます" />

            <!--  削除ボタン  -->
            <Button
                Grid.Row="1"
                Height="30"
                VerticalContentAlignment="Center"
                Command="{Binding RemoveButtonClickedCommand}"
                CommandParameter="{Binding ElementName=EquippedListBox, Path=SelectedItems}"
                Content="⬅"
                FontSize="18"
                IsEnabled="{Binding CanRemoveEquipment, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />
        </Grid>

        <!--  装備一覧  -->
        <ListBox
            x:Name="EquipmentsListBox"
            Grid.Row="1"
            Grid.Column="0"
            DisplayMemberPath="Name"
            ItemsSource="{Binding EquipmentsView}"
            SelectionMode="Extended" />

        <!--  装備中  -->
        <ListBox
            x:Name="EquippedListBox"
            Grid.Row="1"
            Grid.Column="2"
            DisplayMemberPath="Name"
            ItemsSource="{Binding Equipped}"
            SelectionMode="Extended" />

    </Grid>
</UserControl>
